<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mulay" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="roundImageCover">
        <item name="cornerSizeTopLeft">7dp</item>
        <item name="cornerSizeTopRight">7dp</item>
    </style>
    <style name="bottomNavActiveText">
        <item name="android:textSize">8sp</item>
        <item name="android:includeFontPadding">true</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>
    <style name="bottomNavUnActiveText">
        <item name="android:textSize">8sp</item>
        <item name="android:includeFontPadding">true</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>
    <style name="roundPlaylistCover">
        <item name="cornerSizeTopLeft">7dp</item>
    </style>
    <style name="tabLayoutLyrics">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="tabLayoutProfile">
        <item name="android:textSize">13sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/outfit_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="allRoundRadius">
        <item name="cornerSize">10dp</item>
    </style>
    <style name="roundGenreCorner">
        <item name="cornerSizeTopLeft">3dp</item>
        <item name="cornerSizeBottomLeft">3dp</item>
    </style>
    <style name="noAnimActivity" parent="Theme.Mulay">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>
    <style name="searchText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/outfit_regular</item>
    </style>
    <style name="switchText">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="loginTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/pale_white</item>
        <item name="boxStrokeColor">@color/green</item>
    </style>
    <style name="uploadTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/green</item>
    </style>
    <style name="spinnerText">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>