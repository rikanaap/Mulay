<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/background_expandablelist">

    <TextView
        android:id="@+id/textSetMTitleMusicDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/inter_extrabold"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/middleTextDialogSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:text="@string/agrement_dialog"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:fontFamily="@font/outfit_ligth"
        app:layout_constraintTop_toBottomOf="@id/textSetMTitleMusicDialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    
    <LinearLayout
        android:id="@+id/checkboxFormSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/middleTextDialogSection"
        app:layout_constraintTop_toBottomOf="@id/middleTextDialogSection">
        <CheckBox
            android:id="@+id/checkboxInputAcceptDialog"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginStart="10dp"
            android:text="I already read the terms and condition, iâ€™m ready to accept the consequences"
            android:textColor="@color/white"
            android:fontFamily="@font/outfit_ligth"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearUploadButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:background="@drawable/background_round_username"
        app:layout_constraintTop_toTopOf="@id/linearTermsButton"
        app:layout_constraintBottom_toBottomOf="@id/linearTermsButton"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:textSize="9dp"
            android:fontFamily="@font/outfit_semibold"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearTermsButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:background="@drawable/background_round_username"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkboxFormSection"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms and Condition"
            android:textSize="9dp"
            android:fontFamily="@font/outfit_semibold"
            android:textColor="@color/black"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

