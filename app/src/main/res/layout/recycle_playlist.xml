<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintPlaylistWrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/background_playlist"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageSetPlaylisytCoverRecycle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:elevation="5dp"
        app:shapeAppearanceOverlay="@style/roundPlaylistCover"
        android:src="@drawable/image_cover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="@id/imageSetPlaylisytCoverRecycle"
        app:layout_constraintBottom_toBottomOf="@id/imageSetPlaylisytCoverRecycle"
        app:layout_constraintStart_toEndOf="@id/imageSetPlaylisytCoverRecycle"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/textSetPlaylisytTitleItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:maxLength="100"
                android:maxLines="1"
                android:layout_marginLeft="5dp"
                android:scrollHorizontally="true"
                android:text="Playlist Title"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/textSetPlaylistReleaseItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yyyy-mm-dd"
                android:textSize="8sp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_regular"
                app:layout_constraintStart_toStartOf="@id/textSetPlaylisytTitleItem"
                app:layout_constraintTop_toBottomOf="@id/textSetPlaylisytTitleItem"/>
            <ImageView
                android:id="@+id/imageDropdownPlaylist"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_playlist_dropdown"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/textSetPlaylisytTitleItem"
                app:layout_constraintBottom_toBottomOf="@id/textSetPlaylistReleaseItem"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/linearExpandablePlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageSetPlaylisytCoverRecycle">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleExpandablePlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>